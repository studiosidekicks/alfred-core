{
  "name": "Alfred",
  "version": "0.1.0",
  "private": true,
  "description": "Alfred - CMS based on Vue.js and Laravel.",
  "author": "Studio Sidekicks <hello@studiosidekicks.com>",
  "scripts": {
    "lint": "eslint --ext .js,.vue resources/js",
    "dev": "npm run development",
    "development": "cross-env NODE_ENV=development BABEL_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "hot": "cross-env NODE_ENV=development BABEL_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
    "prod": "npm run production",
    "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "report": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --report --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "npm run development -- --watch",
    "watch-poll": "npm run watch -- --watch-poll"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "camelcase": "^5.3.1",
    "clipboard": "^2.0.4",
    "core-js": "^3.6.4",
    "driver.js": "^0.9.7",
    "dropzone": "^5.7.0",
    "file-saver": "^2.0.2",
    "fuse.js": "^3.4.5",
    "js-cookie": "^2.2.1",
    "jsonlint": "^1.6.3",
    "nprogress": "^0.2.0",
    "path-to-regexp": "^3.1.0",
    "screenfull": "^4.2.1",
    "sortablejs": "^1.10.2",
    "vue": "2.6.10",
    "vue-count-to": "^1.0.13",
    "vue-i18n": "^8.14.1",
    "vue-router": "^3.1.5",
    "vue-splitpane": "^1.0.4",
    "vuedraggable": "^2.23.0",
    "vuetify": "^2.2.15",
    "vuex": "3.1.1"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/runtime": "^7.8.4",
    "@mdi/font": "^4.9.95",
    "babel-eslint": "^10.0.3",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-vue-jsx": "^3.7.0",
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^2.0.1",
    "compression-webpack-plugin": "^2.0.0",
    "cross-env": "^5.1",
    "deepmerge": "^4.2.2",
    "dotenv": "^8.2.0",
    "eslint": "^5.16.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-vue": "^5.2.3",
    "fibers": "^4.0.2",
    "husky": "^3.0.5",
    "laravel-mix": "^4.1.4",
    "laravel-mix-eslint": "^0.1.3",
    "lint-staged": "^9.2.5",
    "resolve-url-loader": "^2.3.1",
    "sass": "^1.26.2",
    "sass-loader": "^7.0.0",
    "script-loader": "^0.7.2",
    "svg-sprite-loader": "^4.2.1",
    "vue-cli-plugin-vuetify": "~2.0.5",
    "vue-template-compiler": "2.6.10",
    "vuetify-loader": "^1.3.0",
    "webpack": "^4.41.6",
    "webpack-bundle-analyzer": "^3.5.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "resources/**/*.{js,vue}": [
      "eslint --fix",
      "git add"
    ]
  }
}
